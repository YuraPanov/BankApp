<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.bankapp.controller.CurrencyController" prefWidth="400" prefHeight="300">
    <children>
        <TableView fx:id="table" layoutX="20" layoutY="20" prefWidth="360" prefHeight="150">
            <columns>
                <TableColumn fx:id="codeCol" text="Code" prefWidth="80"/>
                <TableColumn fx:id="nameCol" text="Name" prefWidth="140"/>
                <TableColumn fx:id="rateCol" text="Rate" prefWidth="140"/>
            </columns>
        </TableView>

        <TextField fx:id="codeField" layoutX="20" layoutY="190" promptText="Код" prefWidth="80"/>
        <TextField fx:id="nameField" layoutX="110" layoutY="190" promptText="Название" prefWidth="140"/>
        <TextField fx:id="rateField" layoutX="260" layoutY="190" promptText="Курс" prefWidth="120"/>

        <Button fx:id="addBtn" text="Добавить" layoutX="20" layoutY="230"/>
        <Button fx:id="updateBtn" text="Обновить" layoutX="120" layoutY="230"/>
    </children>
</AnchorPane>